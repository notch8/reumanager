<fieldset>
  <legend>Recommender</legend>
  <%= f.label :first_name, "First Name (example: George) " %>
  <%= f.text_field :first_name, :class => 'form-control' %>

  <%= f.label :last_name, "Last Name (example: Washington)" %>
  <%= f.text_field :last_name, :class => 'form-control' %>

  <%= f.label :email, "Email (example: george@whitehouse.gov)" %>
  <%= f.text_field :email, :class => 'form-control' %>

  <%= f.label :phone, "Phone (example: 555-555-5555)" %>
  <%= f.text_field :phone, :class => 'form-control' %>

  <%= f.label :url, "URL" %>
  <%= f.text_field :url, :class => 'form-control' %>

  <%= f.label :organization, "Organization or University" %>
  <%= f.text_field :organization, :class => 'form-control' %>

  <%= f.label :department %>
  <%= f.text_field :department, :class => 'form-control' %>

  <%= f.label :title %>
  <%= f.text_field :title, :class => 'form-control' %>

  <br />
  
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove this recommender", '#', class: "remove_fields btn btn-mini btn-danger" %>

  <hr class="inner clearfix" />
</fieldset>
