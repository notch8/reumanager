<div class="panel panel-primary">
  <%= form_for(current_applicant, :url => applicants_records_url, :html => { :method => :put, :multipart => true }) do |f| %>
    <div class="panel-heading">Academic Info</div>
    <div class="panel-body">
      <%= errors_for current_applicant %>

      <div class="form-group">
        <%= f.label 'Current Academic Level' %>
        <%= f.select :academic_level, options_for_select(%w{ Sophomore Junior }, current_applicant.academic_level), {:include_blank => ''}, { :class => "form-control" }%>

        <%= f.fields_for :records do |builder| %>
          <%= render 'record_fields', f: builder %>
        <% end %>
        <div class="add-container"><%= link_to_add_fields "Add academic record", f, :records %></div>
      </div>
    </div>

    <div class="panel-heading">GPA Comments</div>
    <div class="panel-body">
      <%= f.text_area :gpa_comment, :class => 'form-control', :rows => 2, :placeholder => "Do you feel your GPA accurately reflects your academic abilities? Please comment on why or why not in the space provided."  %>
    </div>

    <div class="panel-heading">Awards</div>
    <div class="panel-body">
      <%= f.fields_for :awards do |builder| %>
        <%= render 'award_fields', f: builder %>
      <% end %>
      <div class="add-container"><%= link_to_add_fields "Add award", f, :awards %></div>
    </div>

    <div class="panel-heading">Personal Statement</div>
    <div class="panel-body">
      <%= f.text_area :statement, :class => 'form-control', :rows => 2, :placeholder => "What qualities and characteristics will you bring to our program as a result of your work/activities/other life experiences? Max 200 words"  %>
    </div>

    <div class="panel-heading">Diversity Statement</div>
    <div class="panel-body">
      <%= f.text_area :diversity, :class => 'form-control', :rows => 4, :placeholder => "An important part of our mission is to broaden the participation of underrepresented groups in science communities. Please provide a statement regarding your most significant contributions towards improving the diversity, inclusivity, and equality for members of underrepresented groups in any context. This can be based on your personal background and life experiences such as social, cultural, familial, educational, or other opportunities or challenges; Max 400 words"  %>
    </div>

    <div class="panel-heading">Research Experience</div>
    <div class="panel-body">
      <%= f.text_area :research_experience, :class => 'form-control', :rows => 4, :placeholder => "Max 400 words"  %>
    </div>

    <div class="panel-heading">Research Interests</div>
    <div class="panel-body">
      <%= f.text_area :research_interests, :class => 'form-control', :rows => 2, :placeholder => "Max 200 words"  %>
    </div>

    <div class="panel-heading">Computer Skills</div>
    <div class="panel-body">
      <%= f.text_area :cpu_skills, :class => 'form-control', :rows => 2, :placeholder => "Max 200 words"  %>
    </div>

    <div class="panel-heading">Laboratory Skills</div>
    <div class="panel-body">
      <%= f.text_area :lab_skills, :class => 'form-control', :rows => 2, :placeholder => "Max 200 Words"  %>
    </div>

    <div class="panel-heading">Other</div>
    <div class="panel-body">
      <%= f.text_area :other, :class => 'form-control', :rows => 4, :placeholder => "Any further information that would be relevant to the selection committee. Max 400 words"  %>
    </div>

    <%= render "applicants/shared/nav" %>

    <div class="panel-body">
      <hr />
      <p class='clear'><%= f.submit "Save Academic Info", :class => "btn btn-success" %></p>
      <small><strong>You can <%= link_to "logout", destroy_applicant_session_path, :method => :delete %> and continue you application at anytime, however, it will not be accepted until all the above data has been submitted.</strong></small>
    </div>

  <% end %>
</div>
