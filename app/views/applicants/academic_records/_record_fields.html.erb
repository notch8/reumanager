<fieldset>
  <div class="panel-heading">Academic Information</div>
  <div class="panel-body">
    <p>Complete one of these for each college or university you have attended</p>
    <%= f.label :university %>
    <%= f.text_field :university, :class => 'form-control'%>
    <%= f.label :start %>
    <%= f.text_field :start, 'data-behaviour' => 'datepicker', :placeholder => 'Start (YYYY-MM-DD)', :class => 'form-control' %>
    <%= f.label :finish %>
    <%= f.text_field :finish, 'data-behaviour' => 'datepicker', :placeholder => 'Finish or Expected Finish (YYYY-MM-DD)', :class => 'form-control' %>
    <%= f.label :major %>
    <%= f.text_field :major, :placeholder => 'Computer Science', :class => 'form-control' %>
    <%= f.label :minor %>
    <%= f.text_field :minor, :placeholder => 'Literature', :class => 'form-control' %>
    <%= f.label :community, 'Is this a PhD granting institution?' %>
    <%= f.select :community, options_for_select( ["Yes", "No"]), { :include_blank => true }, { :class => "form-control" } %>

    <%= f.label :phd, 'Is this a PhD granting institution?' %>
    <%= f.select :phd, options_for_select( ["Yes", "No"]), { :include_blank => true }, { :class => "form-control" } %>
    <%= f.label :historic, 'Is this a Historically Black College or University?' %>
    <%= f.select :historic, options_for_select( ["Yes", "No"]), { :include_blank => true }, { :class => "form-control" } %>
    <%= f.label :tribal, 'Is this a tribal college?' %>
    <%= f.select :tribal, options_for_select( ["Yes", "No"]), { :include_blank => true }, { :class => "form-control" } %>




    <%= f.label :gpa, 'GPA' %>
    <div class="inner control-group">
      <%= f.select :gpa, gpa_range, {:include_blank => ''}, {:class => :span1} %> out of
      <%= f.select :gpa_range, [4.0, 5.0, 10.0], {:include_blank => 'GPA Range'}, {:class => :span2} %>
    </div>

    <div class="inner">
      <%= f.label :transcript %>
      <p>Attach a PDF or image of your transcript.</p>
      <%= f.file_field :transcript %>
      <%= content_tag :p, raw("Current attachment: #{link_to current_applicant.records.find_by_applicant_id(current_applicant).transcript_file_name, current_applicant.records.find_by_applicant_id(current_applicant).transcript.url}") unless f.object.new_record?  %>
    </div>

  <br />
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove this record", '#', class: "remove_fields btn btn-mini btn-danger" %>
  </div>
  <hr class="inner clear" />

</fieldset>
