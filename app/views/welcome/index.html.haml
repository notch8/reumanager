.row
  .col-xs-6
    .inner
      %h3 General Info
      = raw Snippet[:general_description]
  .col-xs-6
    .inner
      - if expired?
        %h3.deadline
          The deadline for applications has passed. Please sign in to see existing application status.
      - else
        %h3.deadline
          Application Deadline #{Setting[:application_deadline].to_date.strftime("%A, %b %d") if Setting[:application_deadline]}
        .input-group-btn
          - if applicant_signed_in? && current_applicant.state == 'submitted'
            = link_to "Check Status", applicant_status_url, :class => "btn btn-large btn-ar btn-primary", :type => "button"
          - elsif applicant_signed_in?
            = link_to "Finish Application", edit_applicant_registration_path, :class => "btn btn-ar btn-large btn-primary", :type => "button"
          - else
            = link_to "Apply Now", new_applicant_registration_path, :class => "btn btn-large btn-ar btn-primary", :type => "button"

  %aside
    =render :partial => "aside_text"
